<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fruitImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="0.1"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:src="@mipmap/catalog_active" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textSize="10pt"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="Ключ"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:clickable="false"
                android:textSize="8pt"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text="1500 руб."
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/const_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:textSize="8pt"
                android:focusableInTouchMode="false"
                android:text="Дата заказа"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.60"
                android:clickable="false"
                android:focusable="false"
                android:textSize="8pt"
                android:focusableInTouchMode="false"
                android:text="Сегодня"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pay_status_i"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@mipmap/check" />

            <TextView
                android:id="@+id/pay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оплачено"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
